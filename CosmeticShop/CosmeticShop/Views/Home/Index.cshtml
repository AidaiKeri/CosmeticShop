@model CosmeticShop.WebApp.Views.ViewModels.HomeViewModel
<div class="index-bg">
    <div class="header-input">
        <form style="text-align: right" method="get" asp-controller="Products" asp-action="Search">
            <input type="text" name="Name" class="input input-address" placeholder="Поиск по названию" />
            <button class="btn btn-primary header-input__fix-btn">Искать</button>
        </form>
    </div>


    <section class="sevises wow bounceInLeft" data-wow-delay="0.1s">
        
        <div style="max-width: 100% !important" class="container">
            <div style="text-align: center" class="user-message">
                <h1>@Model.Message</h1>
            </div>
            <div style="text-align: center" class="info">
                <h1 class="info-title">
                    Онлайн магазин косметики
                </h1>
                <p class="info-paragraph">
                    Бережный уход за вашей кожей
                </p>
            </div>
        </div>
    </section>
</div>

    <section class="row mb-2">
        <div class="cards">
            @{
                foreach (var product in Model.Products)
                {
                        @await Html.PartialAsync("ShowProduct", product)
                }
            }
        </div>
        @if (User.IsInRole("admin"))
        {
            <div class="btn-block">
                <a asp-action="AddProduct" asp-controller="Products">
                    <span class="btn btn-primary">
                        <span class="btn-text">Добавить товар</span>
                    </span>
                </a>
                <a asp-action="ViewOrders" asp-controller="Orders">
                    <span class="btn btn-primary">
                        <span class="btn-text">Просмотреть заказы</span>
                    </span>
                </a>
            </div>
        }


    </script>

</section>